<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XFHacks.ElementWithBorderPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="clr-namespace:XFHacks.Extensions"
    Title="Element with Border Page">

    <!--  FOR ANDROID|IOS|UWP  -->

    <Grid RowSpacing="20" VerticalOptions="Start">
        <Grid.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="Android" Value="60,20,60,0" />
                <On Platform="iOS" Value="55,20,55,0" />
                <On Platform="UWP" Value="70,20,70,0" />
            </OnPlatform>
        </Grid.Padding>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Welcome to Element with Border!" />

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Center"
            WidthRequest="230">

            <StackLayout Grid.Row="0" Padding="0,0,0,0">

                <!--  Button with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="15"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="0"
                        BackgroundColor="White"
                        CornerRadius="13"
                        HasShadow="False"
                        IsClippedToBounds="True">
                        <!--
                            Whatever the content you want to
                            place inside the Frame goes in here
                        -->
                        <Button Margin="-3" Text="Button with Border" />
                    </Frame>
                </Frame>
            </StackLayout>


            <StackLayout Grid.Row="1" Padding="0,0,0,0">

                <!--  Image with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="70">
                    <Frame
                        Margin="2"
                        Padding="0"
                        BackgroundColor="White"
                        CornerRadius="8"
                        HasShadow="False"
                        IsClippedToBounds="True">
                        <!--
                            Whatever the content you want to
                            place inside the Frame goes in here
                        -->
                        <Image Aspect="AspectFill" Source="{extensions:ImageResource XFHacks.Resources.abstractbackground2.jpg}" />
                    </Frame>
                </Frame>
            </StackLayout>


            <StackLayout Grid.Row="2" Padding="0,0,0,0">

                <!--  Editor with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="2"
                        BackgroundColor="White"
                        CornerRadius="6"
                        HasShadow="False">
                        <!--
                            Whatever the content you want to
                            place inside the Frame goes in here
                        -->
                        <Editor
                            BackgroundColor="Transparent"
                            HeightRequest="70"
                            Text="This is an Editor with a border feature.."
                            TextColor="Black" />
                    </Frame>
                </Frame>
            </StackLayout>


            <StackLayout Grid.Row="3" Padding="0,0,0,0">

                <!--  ProgressBar with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False"
                    HeightRequest="20">
                    <Frame
                        Margin="2"
                        Padding="0"
                        BackgroundColor="Purple"
                        CornerRadius="5"
                        HasShadow="False"
                        IsClippedToBounds="True">
                        <!--
                            Whatever the content you want to
                            place inside the Frame goes in here
                        -->
                        <ProgressBar Progress="0.25" ProgressColor="Brown" />
                    </Frame>
                </Frame>
            </StackLayout>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        </Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    </Grid>
</ContentPage>