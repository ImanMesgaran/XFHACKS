<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XFHacks.LabelWithBorderPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="clr-namespace:XFHacks.Extensions"
    Title="Label with Border Page">

    <!--  FOR ANDROID|IOS|UWP  -->

    <Grid RowSpacing="20" VerticalOptions="Start">
        <Grid.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="Android" Value="70,20,70,0" />
                <On Platform="iOS" Value="55,20,55,0" />
                <On Platform="UWP" Value="70,20,70,0" />
            </OnPlatform>
        </Grid.Padding>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            FontSize="20"
            HorizontalTextAlignment="Center"
            Text="Welcome to Label with Border and more!" />

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Center"
            WidthRequest="260">

            <StackLayout Grid.Row="0" Padding="0,0,0,15">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="5"
                        BackgroundColor="White"
                        CornerRadius="5"
                        HasShadow="False">
                        <Label
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Text="Border with curved corners"
                            TextColor="Black" />
                    </Frame>
                </Frame>
            </StackLayout>

            <StackLayout Grid.Row="1" Padding="0,0,0,15">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="16"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="5"
                        BackgroundColor="White"
                        CornerRadius="14"
                        HasShadow="False">
                        <Label
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Text="Border with rounded sides"
                            TextColor="Black" />
                    </Frame>
                </Frame>
            </StackLayout>

            <StackLayout
                Grid.Row="2"
                Padding="0,0,0,15"
                Orientation="Horizontal">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="16"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <Frame
                        Margin="2"
                        Padding="5"
                        BackgroundColor="White"
                        CornerRadius="14"
                        HasShadow="False">
                        <Label
                            Margin="5,0,0,0"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Start"
                            Text="Start!"
                            TextColor="Black" />
                    </Frame>
                </Frame>

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="16"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <Frame
                        Margin="2"
                        Padding="5"
                        BackgroundColor="White"
                        CornerRadius="14"
                        HasShadow="False">
                        <Label
                            Margin="0,0,5,0"
                            BackgroundColor="Transparent"
                            HorizontalOptions="End"
                            Text="End!"
                            TextColor="Black" />
                    </Frame>
                </Frame>
            </StackLayout>

            <StackLayout Grid.Row="3" Padding="0,0,0,15">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="7"
                        BackgroundColor="#2196F3"
                        CornerRadius="5"
                        HasShadow="False">
                        <Label
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Text="With Background Color!"
                            TextColor="White" />
                    </Frame>
                </Frame>
            </StackLayout>

            <StackLayout Grid.Row="4" Padding="0,0,0,15">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="0"
                        BackgroundColor="White"
                        CornerRadius="5"
                        HasShadow="False"
                        IsClippedToBounds="True">
                        <Grid HeightRequest="30" IsClippedToBounds="True">
                            <Image Aspect="AspectFill" Source="{extensions:ImageResource XFHacks.Resources.abstractbackground1.jpg}" />
                            <Label
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="With a Cool Background!"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </Frame>
            </StackLayout>

            <StackLayout Grid.Row="5" Padding="0,0,0,15">

                <!--  Label with a Border  -->
                <Frame
                    Padding="0"
                    BackgroundColor="#2196F3"
                    CornerRadius="7"
                    HasShadow="False">
                    <Frame
                        Margin="2"
                        Padding="7"
                        BackgroundColor="White"
                        CornerRadius="5"
                        HasShadow="False">
                        <Label
                            BackgroundColor="Transparent"
                            Text="This Label has Multiple Lines and a Border around it, and it is from pure Xamarin.Forms, oh how awesome is that eh!"
                            TextColor="Black" />
                    </Frame>
                </Frame>
            </StackLayout>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        </Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    </Grid>

</ContentPage>